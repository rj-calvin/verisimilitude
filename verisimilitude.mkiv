\startenvironment verisimilitude

\unprotect

\mainlanguage[en]

\definemode[standalone][keep]

\definepapersize[octavo][width=6in, height=9in]
\setuppapersize[octavo][octavo]

\setupbodyfont[11pt]

\setuppagenumbering[
  alternative=doublesided,
  location={header,left},
]

\setuppagenumber[state=stop]

\setuphead[title][page=bigpreference]

\setuptolerance[vertical, verystrict]
\setuptolerance[horizontal, verytolerant]

\clubpenalty=\plustenthousand
\widowpenalty=\plustenthousand

\setuplines[
  before=\empty,
  after=\empty,
  indenting=no,
  space=no,
]

\setupindenting[yes, medium]
\setbreakpoints[compound]
\setupinterlinespace[small]

\def\rule{%
  \par
  \blank[big]
  \startalignment[middle]
  \dontleavehmode
  \blackrule[
    width=1.5in,
    height=0.4pt,
    depth=\zeropoint,
  ]%
  \stopalignment
  \blank[line]
}

\newtoks\everybeforebodypart
\newtoks\everyafterbodypart

\appendtoks
  \setuppagenumber[state=start]%
  \setupheader[state=empty]%
\to \everybeforebodypart

\setupsectionblock[bodypart][
  page=yes,
  before=\the\everybeforebodypart,
  after=\the\everyafterbodypart,
]

\startmode[standalone]
\setuppagenumbering[alternative=singlesided]
\setuppagenumber[state=start]
\setupheader[state=empty]
\stopmode

\protect

\stopenvironment
